<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/plantoday"
    android:background="@drawable/image_3">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape_plantoday"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/datetoday"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="План на 16.01.2025"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@drawable/shape_rounded_variants"
            />
        <LinearLayout
            android:layout_width="260dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rounded_variants"
            android:layout_marginTop="80dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/needcalories"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:text="Необходимо калорий:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/calories"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="2500"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/needorganism"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Организму не хватает:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/vitaminfororganism"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/recomended"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:text="Рекомендованные продукты и рецепты:"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productList"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>