<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/plantoday"
    android:background="@drawable/image_3">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape_plantoday"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Plan_on_day"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:background="@drawable/shape_rounded_variants"
            />
        <LinearLayout
            android:layout_width="260dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rounded_variants"
            android:layout_marginTop="80dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="240dp"
                android:layout_height="150dp"
                android:text="Need_calories:"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="240dp"
                android:layout_height="150dp"
                android:text="Need_you:"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:text="Recomended_products_and_recipes:"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>

                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    />

                />
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>