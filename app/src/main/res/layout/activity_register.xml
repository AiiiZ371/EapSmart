<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/register"
    android:background="@drawable/image_3"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="800dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:orientation="vertical"
        android:background="@drawable/shape_register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <EditText
            android:id="@+id/etName"
            android:layout_marginTop="150dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:hint="Имя"
            android:textColor="#CCCC"
            android:inputType="text"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/shape_rounded_variants"/>

        <EditText
            android:id="@+id/etLoginReg"
            android:layout_marginTop="50dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:hint="Логин"
            android:inputType="text"
            android:textColor="#CCCC"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/shape_rounded_variants"/>

        <EditText
            android:id="@+id/etPassReg"
            android:layout_marginTop="50dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:textColor="#CCCC"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/shape_rounded_variants"/>

        <android.widget.Button
            android:id="@+id/btnRegReg"
            android:layout_marginTop="300dp"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:background="@drawable/shape_rounded_variants"
            android:textAllCaps="true"
            android:text="Регистрация"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>